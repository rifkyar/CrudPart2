@model List<CrudPart2.Context.profile>
@{
    ViewBag.Title = "ProfileList";
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<h2>ProfileList</h2>
<a href="@Url.Action("Profile", "Profile")" class="elements">
    <span>Add Profile</span>
</a>

<table id="table_id" class="table table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    <a href="@Url.Action("Profile", new { item.ID,item.Name,item.Email,item.Address})" class="btn btn-success">Edit</a>
                    <a href="@Url.Action("DeleteProfile",new { item.ID})" class="btn btn-danger">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
